{% extends 'base.html.twig' %}

{% block title %}
  Nouvelle catégorie
{% endblock %}

{% block body %}
  <div class="flex flex-col justify-center items-center m-auto mb-20">
    <h1 class="mb-5">
      Créer une nouvelle catégorie
    </h1>
    {{
      form_start(
        form,
        { attr: { class: 'flex gap-5 justify-center items-center' } }
      )
    }}
    {{ form_row(form.name, { attr: { class: 'text-black m-4' } }) }}
    <button class="link-green m-auto">sauvegarder</button>
    {{ form_end(form) }}
    <a href="{{ path('app_category') }}" class="link-blue">retour</a>
  </div>
{% endblock %}
